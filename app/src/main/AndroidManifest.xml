        <activity
            android:name=".bazaar.ex.shop.containers.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".bazaar.ex.shop.pages.NotWorking"
            android:label="@string/title_activity_not_working"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAZkH6MkpdJLjEiNXkhLZgmIhXVXl_TCes" />

        <activity
            android:name=".bazaar.ex.shop.containers.BazaarContainer"
            android:label="@string/title_activity_container_shop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bazaar.ex.shop.containers.DashBoardContainer"
            android:label="@string/title_activity_container"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bazaar.ex.shop.containers.LandingScreen"
            android:screenOrientation="fullSensor"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".bazaar.ex.shop.containers.RegistrationContainer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bazaar.ex.shop.containers.PlaceContainer"
            android:screenOrientation="portrait" />

        <activity
            android:name=".bazaar.newpages.containers.NotificationContainer"
            android:label="@string/title_activity_notification_container" />

        <service android:name=".bazaar.newpages.firebase.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name=".bazaar.newpages.utilities.GenericFileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>