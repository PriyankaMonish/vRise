<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                           xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
     android:layout_width="match_parent"
    android:layout_height="match_parent"

                                           android:fitsSystemWindows="true"
                                           tools:openDrawer="start">

    <include
        layout="@layout/app_bar_sub_container"

        android:layout_width="match_parent"

        android:layout_height="match_parent" />


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_sub_container"
        android:fitsSystemWindows="true"


       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"


                >

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nav_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="31dp"
                            android:background="?attr/selectableItemBackground"
                            android:backgroundTint="@android:color/black"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_home_nav"
                            android:drawableLeft="@drawable/ic_home_nav"
                            android:drawablePadding="16dp"
                            android:drawableTint="@android:color/black"
                            android:gravity="start"
                            android:paddingStart="31dp"
                            android:paddingLeft="31dp"
                            android:paddingTop="9dp"
                            android:paddingEnd="9dp"
                            android:paddingRight="9dp"
                            android:paddingBottom="9dp"
                            android:text="Home"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/nav_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:background="?attr/selectableItemBackground"
                            android:backgroundTint="@android:color/white"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_profile_nav"
                            android:drawableLeft="@drawable/ic_profile_nav"
                            android:drawablePadding="16dp"
                            android:drawableTint="@android:color/black"
                            android:gravity="start"
                            android:paddingStart="31dp"
                            android:paddingLeft="31dp"
                            android:paddingTop="9dp"
                            android:paddingEnd="9dp"
                            android:paddingRight="9dp"
                            android:paddingBottom="9dp"
                            android:text="Profile"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nav_home" />

                        <TextView
                            android:id="@+id/nav_billing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:background="?attr/selectableItemBackground"
                            android:backgroundTint="@android:color/black"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_billing_nav"
                            android:drawableLeft="@drawable/ic_billing_nav"
                            android:drawablePadding="16dp"
                            android:drawableTint="@android:color/black"
                            android:gravity="start"
                            android:paddingStart="31dp"
                            android:paddingLeft="31dp"
                            android:paddingTop="9dp"
                            android:paddingEnd="9dp"
                            android:paddingRight="9dp"
                            android:paddingBottom="9dp"
                            android:text="Billing"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nav_profile" />

                        <TextView
                            android:id="@+id/nav_receipts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:background="?attr/selectableItemBackground"
                            android:backgroundTint="@android:color/black"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_receipts"
                            android:drawableLeft="@drawable/ic_receipts"
                            android:drawablePadding="16dp"
                            android:drawableTint="@android:color/black"
                            android:gravity="start"
                            android:paddingStart="31dp"
                            android:paddingLeft="31dp"
                            android:paddingTop="9dp"
                            android:paddingEnd="9dp"
                            android:paddingRight="9dp"
                            android:paddingBottom="9dp"
                            android:text="Receipts"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nav_billing" />

                        <TextView
                            android:id="@+id/nav_about_us"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:background="?attr/selectableItemBackground"
                            android:backgroundTint="@android:color/black"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_about_us"
                            android:drawableLeft="@drawable/ic_about_us"
                            android:drawablePadding="16dp"
                            android:drawableTint="@android:color/black"
                            android:gravity="start"
                            android:paddingLeft="31dp"
                            android:paddingTop="9dp"
                            android:paddingEnd="9dp"
                            android:paddingRight="9dp"
                            android:paddingBottom="9dp"
                            android:text="About Us"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nav_receipts" />

                        <TextView
                            android:id="@+id/nav_logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:background="?attr/selectableItemBackground"
                            android:backgroundTint="@android:color/white"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_logout"
                            android:drawableLeft="@drawable/ic_logout"
                            android:drawablePadding="16dp"
                            android:drawableTint="@android:color/white"
                            android:gravity="start"
                            android:paddingStart="31dp"
                            android:paddingLeft="31dp"
                            android:paddingTop="9dp"
                            android:paddingEnd="9dp"
                            android:paddingRight="9dp"
                            android:paddingBottom="9dp"
                            android:text="Logout"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nav_about_us" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
