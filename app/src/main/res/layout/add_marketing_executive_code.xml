<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?attr/my_popup_corner"
        app:cardElevation="?attr/my_pop_up_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="match_parent"
                                                           android:layout_gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textView35"
                style="@style/MyTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_avatar"
                android:drawableStart="@drawable/ic_avatar"
                android:hint="Marketing Executive Code"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:singleLine="true"
                app:layout_constraintBottom_toTopOf="@+id/textView37"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView37"
                style="@style/PrimaryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginBottom="27dp"
                android:layout_marginEnd="9dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="9dp"
                android:layout_marginStart="30dp"
                android:text="@string/cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView38"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView35" />

            <TextView
                android:id="@+id/textView38"
                style="@style/PrimaryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="9dp"
                android:text="@string/submit"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView37"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView37" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="9dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/textView37"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView37"
                app:layout_constraintTop_toTopOf="@+id/textView37" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>