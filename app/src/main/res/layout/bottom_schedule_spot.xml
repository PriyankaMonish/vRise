<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintLayout3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:clickable="false"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_round_top"
        app:behavior_hideable="true"
        android:insetRight="10dp"
        android:insetLeft="10dp"
        app:behavior_peekHeight="600dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">


        <TextView
                android:text="Spot Delivery: in 90 minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView40"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp"
                android:textStyle="bold"/>

        <View
                android:id="@+id/textView208"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="#C9C3C3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView40" />

        <TextView
                android:text="Price: â‚¹0.0"
                android:layout_width="0dp"
                android:textSize="18sp"
                android:textColor="@color/cb_errorRed"
                android:layout_height="wrap_content"
                android:id="@+id/textView204"
                app:layout_constraintTop_toBottomOf="@+id/textView208"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintEnd_toStartOf="@+id/constraintLayout8"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@+id/textView204"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/constraintLayout8"
                app:layout_constraintTop_toTopOf="@+id/textView204"
                app:layout_constraintBottom_toBottomOf="@+id/textView204">

            <TextView
                android:id="@+id/textView205"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/square_primary"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/colorAccentNew"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView206"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView206"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:minWidth="10dp"
                android:text="1"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView207"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView207"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/square_primary"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/colorAccentNew"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
                android:id="@+id/textView209"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView204" />

        <Button
                android:text="Add To Cart"
                android:layout_width="0dp"
                app:backgroundTint="@color/colorPrimary"
                android:layout_height="56dp"
                android:id="@+id/button4"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView209"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                app:layout_constraintEnd_toStartOf="@+id/button7"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
                android:text="Cancel"
                android:layout_width="0dp"
                app:backgroundTint="@color/colorPrimary"
                android:layout_height="56dp"
                android:id="@+id/button7"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView209"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                app:layout_constraintStart_toEndOf="@+id/button4"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <include
                android:layout_width="0dp"
                android:layout_height="0dp"
                layout="@layout/item_progress_sheet"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>