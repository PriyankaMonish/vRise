<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="300dp"
                                                   android:layout_height="wrap_content"
                                                   android:layout_gravity="center">

    <Spinner
        android:id="@+id/spinner185"
        style="@style/PrimaryButtonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:dropDownVerticalOffset="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView185"
        app:layout_constraintEnd_toEndOf="@+id/textView185"
        app:layout_constraintStart_toStartOf="@+id/textView185"
        app:layout_constraintTop_toTopOf="@+id/textView185" />

    <TextView
        android:id="@+id/textView185"
        style="@style/PrimaryButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableStart="@drawable/ic_language"
        android:drawableLeft="@drawable/ic_language"
        android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:drawablePadding="5dp"
        android:gravity="left"
        android:padding="6dp"
        android:text="Language"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner186"
        style="@style/PrimaryButtonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:dropDownVerticalOffset="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView186"
        app:layout_constraintEnd_toEndOf="@+id/textView186"
        app:layout_constraintStart_toStartOf="@+id/textView186"
        app:layout_constraintTop_toTopOf="@+id/textView186" />

    <TextView
        android:id="@+id/textView186"
        style="@style/PrimaryButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableStart="@drawable/ic_category"
        android:drawableLeft="@drawable/ic_category"
        android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:drawablePadding="5dp"
        android:gravity="left"
        android:padding="6dp"
        android:text="Categories"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView185" />


    <TextView
        android:id="@+id/textView190"
        style="@style/PrimaryButtonStyle"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView191"
        app:layout_constraintTop_toBottomOf="@+id/spinner186" />

    <TextView
        android:id="@+id/textView191"
        style="@style/PrimaryButtonStyle"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Cancel"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView190"
        app:layout_constraintEnd_toStartOf="@+id/textView190"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>