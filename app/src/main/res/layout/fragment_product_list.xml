<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vhhh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/quantum_white_text">

        <TextView
            android:id="@+id/txtMainCategory"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_border_gr"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorPrimary"
            android:paddingStart="@dimen/_5sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView27" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@+id/txtMainCategory"
            app:layout_constraintLeft_toRightOf="@+id/txtMainCategory"
            app:layout_constraintTop_toTopOf="@+id/txtMainCategory" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleSubCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtMainCategory" />

        <TextView
            android:id="@+id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycleSubCategory" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView27"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/bright_turquoise"
            app:layout_constraintLeft_toLeftOf="@+id/vhhh"
            app:layout_constraintRight_toRightOf="@id/vhhh"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView312"
                    android:layout_width="0dp"
                    android:layout_height="38dp"

                    android:background="#eff9f4"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txtFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtCount" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleItems"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:listitem="@layout/item_product"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/for_white"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCount"
            app:spanCount="2" />

                <include
                    android:id="@+id/include4"
                    layout="@layout/item_progress_sheet"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>