<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginBottom="32dp"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible"
    tools:context=".bazaar.ex.shop.pages.main.RequestOrder">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_two"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_card_round"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons_new"
        tools:listitem="@layout/item_request" />

        <View
            android:id="@+id/view17"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/iron"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recy_two" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view28"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@color/quantum_white_100"
        android:padding="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view17">

        <TextView
            android:id="@+id/textView3140"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="34dp"
            android:gravity="right"
            android:text="Delivery Charge"
            android:textColor="@color/black"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/textView34111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView34111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/textView3140"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView3140" />

        <TextView
            android:id="@+id/textView3142"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Packing Charge"
            android:gravity="right"
            android:textColor="@color/black"
            android:visibility="visible"

            app:layout_constraintEnd_toEndOf="@+id/textView3140"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3140" />


        <TextView
            android:id="@+id/textView34133"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/textView346"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView346" />

        <TextView
            android:id="@+id/textView3455"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/textView3142"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView3142" />

        <TextView
            android:id="@+id/textView346"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total"
            android:gravity="right"
            android:textColor="@color/black"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/textView3142"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3142" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/quantum_white_100"

        app:layout_constraintEnd_toEndOf="@+id/recy_two"
        app:layout_constraintStart_toStartOf="@+id/recy_two"
        app:layout_constraintTop_toBottomOf="@id/textView390">

        <TextView
            android:id="@+id/textView371"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="left"
            android:paddingStart="4dp"
            android:text="Item"
            android:textColor="#BE000000"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView375"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView375"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:text="Unit"
            android:textColor="#BE000000"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView377"
            app:layout_constraintStart_toEndOf="@+id/textView371"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView377"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:text="Qty"
            android:textColor="#BE000000"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView383"
            app:layout_constraintStart_toEndOf="@+id/textView375"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView383"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Price"
            android:textColor="#BE000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView377"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/textView389"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Requested Order Details"
            android:textColor="@color/green_drawer"
            android:textSize="14dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/recy_two"
            app:layout_constraintTop_toBottomOf="@+id/view28" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Confirm"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/cancel_after"
            app:layout_constraintTop_toTopOf="@+id/cancel_after"
            tools:visibility="gone" />

        <Button
            android:id="@+id/cancel_after"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/debit_red"
            android:text="Cancel"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/textView389"
            app:layout_constraintTop_toBottomOf="@+id/textView389" />

        <Button
            android:id="@+id/cancel_edit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/debit_red"
            android:text="Cancel"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout32"
            app:layout_constraintTop_toBottomOf="@+id/view28" />

        <Button
            android:id="@+id/cancellall"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/debit_red"
            android:text="Cancel all"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/view28" />

    <TextView
        android:id="@+id/textView390"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="16dp"
        android:visibility="invisible"
        android:textColor="@color/green_drawer"
        android:text="Requested Order Details"
        app:layout_constraintBottom_toTopOf="@+id/cons_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="OK"
        app:layout_constraintEnd_toEndOf="@+id/view28"
        app:layout_constraintStart_toStartOf="@+id/view28"
        app:layout_constraintTop_toBottomOf="@+id/view28" />
</androidx.constraintlayout.widget.ConstraintLayout>

