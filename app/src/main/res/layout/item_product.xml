<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="context"
            type="androidx.fragment.app.FragmentActivity" />

        <variable
            name="dataItem"
            type="com.vrise.bazaar.ex.model.newmodels.ShopsItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_card_round"
        android:backgroundTint="@color/lite_blue"
        android:inputType="textCapWords"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/imgProductImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/bg_card_round"
            android:backgroundTint="@color/quantum_white_text"
            android:padding="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="left"
            android:textColor="#4CAF50"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgProductImage"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/spnrTypes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_card_round_item"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtProductName" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnrTypes" />

        <TextView
            android:id="@+id/txtMinus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_card_round"
            android:backgroundTint="@color/quantum_white_text"
            android:gravity="center|center_horizontal"
            android:paddingBottom="4dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPrice" />

        <TextView
            android:id="@+id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtMinus"
            app:layout_constraintLeft_toRightOf="@+id/txtMinus"
            app:layout_constraintTop_toTopOf="@+id/txtMinus" />

        <TextView
            android:id="@+id/txtPlus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/bg_card_round"
            android:backgroundTint="@color/quantum_white_text"
            android:gravity="center|center_horizontal"
            android:paddingBottom="4dp"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtMinus"
            app:layout_constraintLeft_toRightOf="@+id/txtCount"
            app:layout_constraintTop_toTopOf="@+id/txtMinus" />

        <TextView
            android:id="@+id/txtAddtoCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_round"
            android:backgroundTint="@color/colorPrimary"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/add_to_cart"
            android:textColor="@color/quantum_white_text"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtPlus"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtPlus" />

        <TextView
            android:id="@+id/textView349"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="8dp"
            android:textColor="@color/green_drawer"
            android:textSize="10dp"
            app:layout_constraintEnd_toStartOf="@+id/txtPrice"
            app:layout_constraintStart_toStartOf="@+id/txtMinus"
            app:layout_constraintTop_toBottomOf="@+id/txtCount"
            tools:visibility="gone" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>