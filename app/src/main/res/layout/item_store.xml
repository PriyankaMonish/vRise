<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="context"
            type="androidx.fragment.app.FragmentActivity" />

        <variable
            name="dataItems"
            type="com.vrise.bazaar.ex.model.newmodels.ShopsItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="150dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:background="@drawable/bg_card_round_item">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView29"
            android:layout_width="150dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            android:background="@drawable/bg_card_round_item2_it"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@+id/txtStoreName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="150dp"
                android:layout_height="90dp">


                <ImageView
                    android:id="@+id/imgStore"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/bg_card_round_item2_it"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--        context="@{context}"-->

                <!--        url="@{dataItems.imgLink.toString()}"-->

                <TextView
                    android:id="@+id/txtDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/bg_card_round"
                    android:backgroundTint="@color/colorPrimary"
                    android:paddingLeft="@dimen/five_dp"
                    android:paddingTop="@dimen/three_dp"
                    android:paddingRight="@dimen/five_dp"
                    android:paddingBottom="@dimen/three_dp"
                    android:text="@{dataItems.rating.toString()}"
                    android:textColor="@color/quantum_white_text"
                    android:textSize="@dimen/_9sdp"
                    android:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgFavorite"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginEnd="@dimen/five_dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtRatings"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_card_round"
                    android:backgroundTint="@color/colorPrimary"
                    android:paddingLeft="@dimen/five_dp"
                    android:paddingTop="@dimen/three_dp"
                    android:paddingRight="@dimen/five_dp"
                    android:text='@{(dataItems.distance.toString() ?? "0") + " km away"}'
                    android:textColor="@color/quantum_white_text"
                    android:textSize="@dimen/_9sdp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_round_item_text"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:inputType="textCapWords"
            android:paddingBottom="2dp"
            android:text="@{dataItems.storeName.toString()}"
            android:textColor="@color/quantum_white_text"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/cardView29" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>