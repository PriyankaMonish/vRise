<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/data_availability"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:cardElevation="4dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/imageView51"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:tint="@color/colorPrimaryNew"
                app:srcCompat="@drawable/ic_location" />

        <TextView
                android:id="@+id/textView258"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="No shops available in this area.(within 3 kms)" />


        <TextView
                android:id="@+id/textView259"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Try changing the search radius\nor Delivery address"
                android:textSize="10sp" />

        <Button
                android:id="@+id/button26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                android:text="Change Search Radius"
                android:textSize="12sp"
                app:backgroundTint="@color/colorPrimary" />

    </LinearLayout>
</androidx.cardview.widget.CardView>